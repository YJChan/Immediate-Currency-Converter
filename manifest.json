{
  "manifest_version": 2,
  "name": "Immediate Currency Converter",
  "version": "1.5.5",

  "description": "Highlight amount on webpage and get converted amount.",

  "background": {
    "scripts": [
      "thirdparty/jquery-3.2.1.js", "thirdparty/money.js", "background.js", "sidebar/sidebar.js"
    ]
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "storage",
    "tabs",
    "http://fixer.io/",
    "http://immcurr.appec.work/v1/exchgrate"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/curr_converter-19.png",
      "38": "icons/curr_converter-32.png"
    },
    "default_popup": "currencies.html",
    "default_title": "Immediate Currency Converter"
  },

  "sidebar_action": {
    "default_title": "List of Converted Value",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": {
      "19": "icons/curr_converter-19.png",
      "38": "icons/curr_converter-32.png"
    }
  },

  "icons": {
    "48": "icons/curr_converter-48.png"
  },

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  },

  "content_scripts": [{
    "matches": ["<all_urls>"]
  }]
}